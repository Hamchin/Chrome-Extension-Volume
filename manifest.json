{
  "name": "My Volume Master",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "My Volume Master"
  },
  "permissions": [
    "tabs",
    "tabCapture",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "commands": {
    "volume-up": {
      "suggested_key": {
        "default": "Alt+Up"
      },
      "description": "Volume Up"
    },
    "volume-down": {
      "suggested_key": {
        "default": "Alt+Down"
      },
      "description": "Volume Down"
    },
    "volume-mute": {
      "suggested_key": {
        "default": "Alt+M"
      },
      "description": "Volume Mute"
    }
  }
}
